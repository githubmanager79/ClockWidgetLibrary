<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Основная информация проекта -->
    <groupId>io.github</groupId>
    <artifactId>githubmanager79</artifactId>
    <version>1.0.3</version>
    <packaging>jar</packaging>

    <name>ClockWidgetLibrary</name>
    <description>ClockWidgetLibrary is cool</description>
    <url>https://github.com/githubmanager79/ClockWidgetLibrary</url>

    <!-- Лицензии -->
    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
        </license>
    </licenses>

    <!-- Информация о разработчиках -->
    <developers>
        <developer>
            <name>Bohdan Potorochyn</name>
            <email>p.bogdanvladimirovich@gmail.com</email>
            <organization>MyOrganization</organization>
            <organizationUrl>http://ec2-18-117-125-236.us-east-2.compute.amazonaws.com:8000</organizationUrl>
        </developer>
    </developers>

    <!-- Информация о системе управления исходным кодом -->
    <scm>
        <connection>scm:git:git://github.com/githubmanager79/ClockWidgetLibrary.git</connection>
        <developerConnection>scm:git:ssh://github.com/githubmanager79/ClockWidgetLibrary.git</developerConnection>
        <url>https://github.com/githubmanager79/ClockWidgetLibrary</url>
    </scm>

    <!-- Информация для развертывания -->
    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>android</id>
            <url>https://maven.google.com</url>
        </repository>
    </repositories>

    <!-- Зависимости проекта (если есть) -->
    <dependencies>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib</artifactId>
            <version>1.7.20</version> 
        </dependency>
        <dependency>
            <groupId>androidx.appcompat</groupId>
            <artifactId>appcompat</artifactId>
            <version>1.6.1</version> 
            <scope>provided</scope>
    </dependency>
    </dependencies>

    <!-- Плагины -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.owasp</groupId>
                <artifactId>dependency-check-maven</artifactId>
                <version>6.2.2</version> <!-- Укажите актуальную версию -->
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>1.7.20</version> 
                <executions>
                    <execution>
                        <id>compile</id>
                        <goals> <goal>compile</goal> </goals>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <goals> <goal>test-compile</goal> </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Другие плагины для вашего проекта -->
        </plugins>
    </build>
</project>